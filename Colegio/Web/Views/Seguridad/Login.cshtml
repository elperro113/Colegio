@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Seguridad", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Formulario de Inicio de Sesión.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Nombre de Usuario", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="username" name="username" />
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Contraseña", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <input type="password" class="form-control" id="clave" name="clave" />
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tipo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Tipo", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Aceptar" class="btn btn-default" />
                        <div style="color:red;">
                            <br /> @ViewBag.Error
                        </div>
                    </div>
                </div>



            }
        </section>
    </div>
    <div class="col-md-4">

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}